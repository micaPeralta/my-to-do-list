<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :due_date %>
    <%= f.text_field :due_date, class: 'datepicker' %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description,class: "materialize-textarea" %>
  </div>

  <div class="field">
    <%= f.check_box :done %>
    <%= f.label :done %>
  </div>

  <div class="actions">
    <%= f.submit :class => 'waves-effect waves-light btn' %>
  </div>
<% end %>
